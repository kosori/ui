{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tailwind": {
      "type": "object",
      "properties": {
        "config": {
          "type": "string"
        },
        "css": {
          "type": "string"
        }
      },
      "required": ["config", "css"]
    },
    "aliases": {
      "type": "object",
      "components": {
        "type": "string"
      },
      "utils": {
        "type": "string"
      },
      "ui": {
        "type": "string"
      },
      "hooks": {
        "type": "string"
      },
      "required": ["components", "utils", "ui", "hooks"]
    }
  },
  "required": ["tailwind", "aliases"]
}
